{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "**/*.ts",
        "packages/parser/src/**/*.js",
        "packages/playground/**/*.css",
        "packages/playground/**/*.html",
        "packages/playground/**/*.ejs",
        "packages/playground/**/*.codeExample.txt"
      ],
      "outputs": ["dist/**"]
    },
    "test": {
        "dependsOn": ["build", "^test"],
        "inputs": [
          "**/*.ts",
          "packages/parser/src/**/*.js",
          "packages/parser/tests/**/*.in.dbml"
        ]
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}